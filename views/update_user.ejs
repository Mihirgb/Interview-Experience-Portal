<%- include('include/header') %>

<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <div class="filter">
                <a href="/"><i class="fas fa-angle-double-left"></i> All Users</a>
            </div>
         </div>
         <div class="form-title text-center">
             <h2 class="text-dark">The Experience</h2>
             <span class="text-light"> Read on to find 'Interview Experiences' of all product and service-based companies</span>
         </div>

         <!-- form handling -->
<form   method="POST" id="update_user">
    <div class="new_user"  >
        <div class="form-group">
            <label for="name" class="text-light">Candidate Name</label>
            <input type="hidden" name="id" value="<%= user._id %>">
            <input type="text" name="name" value="<%= user.name %>" placeholder="">
        </div>
    
        <div class="form-group">
            <label for="inttype" class="text-light">Interview type:</label>
            <input type="text" name="inttype" value="<%= user.inttype %>" placeholder="">
        </div>

        <div class="form-group">
            <label for="name" class="text-light">Company Name</label>
            <input type="text" name="company" value="<%= user.company%>" placeholder="">
        </div>
        <div class="form-group">
            <label for="name" class="text-light">About Company</label>
            <input type="text" name="experience" value="<%= user.experience%>" placeholder="">
        </div>

        <div class="form-group">
            <label for="requirements" class="text-light">Company Requirements:</label>
            <input type="text" name="requirements" value="<%= user.requirements%>" placeholder="">
        </div>
        <div class="form-group">
            <label for="name" class="text-light">Interview Process:(How many rounds the company conducted?)</label>
            <input type="text" name="process" value="<%= user.process%>" placeholder="">
        </div>
        <div class="form-group">
            <label for="name" class="text-light">Questions asked:</label>
            <input type="text" name="questions" value="<%= user.questions%>" placeholder="">
        </div>


        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>
    </div>
</main>

<%- include('include/footer') %>